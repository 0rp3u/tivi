<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="entity"
            type="app.tivi.data.entities.TiviShow" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <app.tivi.ui.widget.BaselineGridTextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:ellipsize="end"
            android:text="@{entity.title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="@sample/shows.txt" />

        <app.tivi.ui.widget.BaselineGridTextView
            android:id="@+id/details_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text="@{entity.originalTitle}"
            android:textAppearance="?attr/textAppearanceBody1"
            app:visibleIfNotNull="@{entity.originalTitle}"
            tools:text="@sample/shows.txt" />

        <!-- The text color is set to an opaque color for Emoji.
             The caption text appearance is set via spans. -->
        <app.tivi.ui.widget.BaselineGridTextView
            android:id="@+id/details_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="#000000"
            app:genreContentDescriptionString="@{entity.genres}"
            app:genreString="@{entity.genres}"
            tools:text="Drama // Fantasy" />

    </LinearLayout>
</layout>