<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="app.tivi.home.discover.DiscoverViewState" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/summary_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isRefreshing="@{state.isLoading}"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:id="@+id/summary_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="2dp"
                android:paddingVertical="6dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:paddingBottomSystemWindowInsets="@{ true }"
                app:spanCount="@integer/grid_condensed_span_count"
                tools:listitem="@layout/view_holder_poster_grid_item" />

            <app.tivi.ui.widget.MaterialShapeConstraintLayout
                android:id="@+id/header_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:elevation="@dimen/sticky_header_elevation"
                app:materialBackgroundColor="?attr/colorSurface" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>