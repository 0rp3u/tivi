<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/episode_details_closed"
        app:constraintSetStart="@id/episode_details_open"
        app:duration="400"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/ep_details_rv"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/ep_details_rv"
            app:onTouchUp="decelerateAndComplete"/>

    </Transition>

    <ConstraintSet android:id="@+id/episode_details_open">



    </ConstraintSet>

    <ConstraintSet android:id="@+id/episode_details_closed">


        <Constraint
            android:id="@+id/ep_details_rv">

            <Layout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </Constraint>

    </ConstraintSet>


</MotionScene>