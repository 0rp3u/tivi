<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <import type="android.view.View" />

        <variable
            name="tiviShow"
            type="app.tivi.data.entities.TiviShow" />

        <variable
            name="trendingShow"
            type="app.tivi.data.entities.TrendingShowEntry" />

        <variable
            name="posterImage"
            type="app.tivi.data.entities.TmdbImageEntity" />

        <variable
            name="transitionName"
            type="String" />

        <variable
            name="tmdbImageUrlProvider"
            type="app.tivi.tmdb.TmdbImageUrlProvider" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        android:transitionGroup="true"
        android:transitionName="@{transitionName}">

        <TextView
            android:id="@+id/show_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@{tiviShow.title}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/shows.txt" />

        <ImageView
            android:id="@+id/show_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:image="@{posterImage}"
            app:layout_constraintDimensionRatio="w,1.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmdbImageUrlProvider="@{tmdbImageUrlProvider}" />

        <View
            android:id="@+id/show_annotation_background"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="?attr/colorPrimarySurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_poster"/>

        <TextView
            android:id="@+id/show_annotation"
            style="@style/Widget.Tivi.GridItem.Annotation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableStart="@drawable/ic_eye_12dp"
            android:drawableTint="@color/color_on_primary_surface_70"
            android:text="@{Integer.toString(trendingShow.watchers)}"
            android:textColor="@color/color_on_primary_surface_87"
            app:layout_constraintBottom_toBottomOf="@id/show_annotation_background"
            app:layout_constraintEnd_toEndOf="@id/show_annotation_background"
            app:layout_constraintTop_toTopOf="@id/show_annotation_background"
            app:visibleIfNotNull="@{trendingShow.watchers}"
            tools:text="100" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>